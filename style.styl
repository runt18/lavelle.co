@import 'nib'

grey = #333
highlight = #BD0000

margin_big = 30px
header_height = 150px

@font-face
  font-family: 'Goudy'
  src: url('font/goudy_bookletter_1911-webfont.ttf')

@font-face
  font-family: 'League Gothic'
  src: url('font/leaguegothic-regular-webfont.ttf')

body
  font-family: 'Goudy', 'Georgia', serif
  color: grey
  font-size: margin_big

h1
  margin: 0
  font-family: 'League Gothic', 'Helvetica', sans-serif
  color: highlight
  font-size: 100px
  line-height: header_height
  text-transform: uppercase

a
  color: grey
  transition: all 0.2s
  text-decoration: underline


ul
  padding: 0

li
  list-style-type: none
  margin: 0.5em 0

li:before
  content: '\0BB \020'

a:hover, a:active
  color: highlight

body
  margin: 60px 0 0 60px

header
  margin-bottom: margin_big

  *
    float: left

.profile
  height: header_height
  border-radius: 50%
  margin: 0 margin_big 0 0
